<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="#F4E9C8"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="200dp"
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvSubjectTitle"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:text="TÊN KHÓA HỌC"></TextView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="Số tín chỉ: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:id="@+id/tvCredit"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/subjectinformation"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="#00000000"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_view"></ImageButton>

    <ImageButton
        android:id="@+id/subjectinupdate"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="18dp"
        android:background="#00000000"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_update"></ImageButton>

    <ImageButton
        android:id="@+id/subjectindelete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="#00000000"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_delete"></ImageButton>
</LinearLayout>